# ===========================================
# POSTGRESQL (condiviso)
# ===========================================
PG_USER=yourusername
PG_PASS=yourpassword
PG_DB=yourdatabase
PGADMIN_DEFAULT_EMAIL=yourpgadminemail
# ===========================================
# DATABASE BACKEND
# ===========================================
DB_USER=yourusername
DB_PASSWORD=yourpassword
DB_NAME=yourdatabase
DB_HOST=yourdbhost
DB_PORT=5433
DB_CONNECTION_URI=postgres://yourusername:yourpassword@yourdbhost:5432/yourdatabase
DIALECT=postgres

# ===========================================
# DATABASE KEYCLOAK
# ===========================================
KEYCLOAK_DB_NAME=yourkeycloakdb
KEYCLOAK_DB_USER=yourusername
KEYCLOAK_DB_PASSWORD=yourpassword
KEYCLOAK_DB_HOST=yourdbhost

# ===========================================
# KEYCLOAK ADMIN
# ===========================================
KEYCLOAK_USER=youradminusername
KEYCLOAK_PASSWORD=youradminpassword
KEYCLOAK_HTTP_PORT=8080

# ===========================================
# KEYCLOAK CONFIGURATION
# ===========================================
KEYCLOAK_REALM=yourrealm
KEYCLOAK_BACKEND_CLIENT_ID=yourbackendclientid
KEYCLOAK_BACKEND_CLIENT_SECRET=yourbackendclientsecret
KEYCLOAK_FRONTEND_CLIENT_ID=yourfrontendclientid

# Keycloak - per script esterni (localhost)
KEYCLOAK_URL=http://keycloak:8080
KEYCLOAK_ADMIN_USERNAME=youradminusername
KEYCLOAK_ADMIN_PASSWORD=youradminpassword

# Keycloak - URLs interni Docker (per backend in Docker)
KEYCLOAK_URL_DOCKER=http://keycloak:8080
KEYCLOAK_AUTH_URL=http://keycloak:8080/realms/yourrealm/protocol/openid-connect/auth
KEYCLOAK_TOKEN_URL=http://keycloak:8080/realms/yourrealm/protocol/openid-connect/token
KEYCLOAK_USERINFO_URL=http://keycloak:8080/realms/yourrealm/protocol/openid-connect/userinfo

# Keycloak URLs pubblici (per il frontend - dal browser)
KEYCLOAK_PUBLIC_URL=http://localhost:8080

# ===========================================
# APPLICATION
# ===========================================
NODE_ENV=development
BACKEND_PORT=3000
FRONTEND_PORT=4200

# Session Secret (genera con: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
SESSION_SECRET=your_session_secret_here

# Client URL (per CORS)
CLIENT_URL=http://localhost:4200